# Campo360 Manager - Backend Configuration Template
# Copia este archivo como .env y configura los valores apropiados

# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT Configuration - CAMBIAR EN PRODUCCIÓN
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:5177,http://localhost:5173"

# API Documentation
API_TITLE="Campo360 Manager API"
API_DESCRIPTION="API para el sistema de gestión agrícola Campo360"
API_VERSION="1.0.0"

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100
